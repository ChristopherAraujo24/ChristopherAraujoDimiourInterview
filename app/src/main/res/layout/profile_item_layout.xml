<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="20dp">
    <ImageView
        android:id="@+id/iv_profile_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/tv_profile_fn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_profile_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_profile_avatar"
        tools:text="some some"/>
    <TextView
        android:id="@+id/tv_profile_ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_avatar"
        app:layout_constraintStart_toEndOf="@id/tv_profile_fn"
        tools:text="some some"/>
    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
app:layout_constraintTop_toBottomOf="@id/tv_profile_ln"
        app:layout_constraintStart_toStartOf="@id/tv_profile_fn"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_avatar"
        tools:text="some some"/>
</androidx.constraintlayout.widget.ConstraintLayout>